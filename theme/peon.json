{
  "watch":{
    "src": "src",
    "dest": "pyco/themes/dev",
    "clean": true,
    "server": true,
    "pyco": "pyco",
    "skip_includes": "html"
  },
  "packing":{
    "zip":{
      "cwd":"pyco/themes/dev",
      "file":"simba.zip",
      "include_hidden":false,
      "include_peon_config":false,
      "excludes":[]
    },
    "upload":{
      "cwd":"pyco/themes/dev",
      "file":"simba.zip",
      "headers":{
        "SecretKey":"redy-54f10629469448f080bcff175120d332"
      },
      "url":"http://localhost:5000/ws/soopro/develop_theme",
      "data":null,
      "params":null
    }
  },
  "transport":{
    "upload":{
      "cwd":"content",
      "replace": [
        {
          "pattern":"/$uploads/",
          "replacement":"http://localhost:5050/site/redy/soopro/"
        }
      ],
      "headers":{
        "content-type": "application/json",
        "SecretKey":"redy-54f10629469448f080bcff175120d332"
      },
      "url":"http://localhost:5000/ws/soopro/develop_sync_sitedata"
    },
    "download":{
      "dest":"content",
      "replace": [
        {
          "pattern":"http://localhost:5050/site/redy/soopro/", 
          "replacement":"/$uploads/"
        }
      ],
      "headers":{
        "SecretKey":"redy-54f10629469448f080bcff175120d332"
      },
      "url":"http://localhost:5000/ws/soopro/develop_sync_sitedata"
    }
  },
  "release":{
    "clean": ["build", "dist"],
    "render":{
      "cwd": "src",
      "dest": "build",
      "skip_includes":["html"]
    },
    "copy":{
      "scripts":{
        "src": [
          "**/*"
        ],
        "cwd": "build",
        "dest": "dist"
      },
      "assets":{
        "flatten": true,
        "src": [
          "**/*.ttf",
          "**/*.woff*",
          "**/*.png",
          "**/*.jpg",
          "**/*.svg",
          "!uploads/*"
        ],
        "cwd": "build",
        "dest": "dist"
      }
    },
    "compress": {
      "process_html":{
        "type": "process_html",
        "cwd": "dist",
        "src": "*.html"
      }
    },
    "replace": {
      "src": "*.min.*",
      "cwd": "dist",
      "replacements": [
        {
          "pattern": "../styles/svgdefs.svg",
          "replace": "svgdefs.svg"
        }
      ]
    },
    "scrap": {
      "src":[
        "*",
        "!*.html",
        "!*.min.*",
        "!*.png",
        "!*.jpg",
        "!*.svg",
        "!*.ttf",
        "!*.woff*"
      ],
      "cwd":"dist"
    },
    "rev":{
      "src":"*.html",
      "cwd":"dist",
      "find":"?md5=null",
      "pattern":"null"
    }
  }
}